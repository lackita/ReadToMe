<ul>
<% @statuses.each do |status| %>
  <li><%= link_to status, books_path(:status => status) %> (<%= @books[status].length %>)</li>
<% end %>
</ul>

<table>
  <% @books[@current_status].each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
    </tr>
  <% end %>
</table>

<br />

