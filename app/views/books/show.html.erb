<p id="notice"><%= notice %></p>
<h3><%= @book.title %></h3>
<h5>by <%= @book.author %></h5>

<p>This book
<% if @book.status == "Unread" %>
  has not been
<% elsif @book.status == "Reading" %>
  is being
<% else %>
  has been
<% end %>
read.</p>

<ul>
  <% @book.chapters.each do |chapter| %>
    <li><%= chapter.name %> | <%= link_to 'Destroy', chapter, :confirm => 'Are you sure?', :method => :delete %> | <%= link_to 'Edit', edit_chapter_path(@chapter) %></li>
  <% end %>
  <li><%= link_to "Add a chapter", new_chapter_path(:book_id => @book.id) %></li>
</ul>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Destroy', @book, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Back', books_path %>
